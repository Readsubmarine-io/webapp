{
  "extends": ["next/core-web-vitals", "next/typescript"],
  "plugins": ["prettier", "simple-import-sort"],
  "rules": {
    "react/no-unescaped-entities": "off",
    "@typescript-eslint/no-unused-vars": [
      "error",
      { "argsIgnorePattern": "^_" }
    ],
    "simple-import-sort/imports": "error",
    "prettier/prettier": "error"
  }
}
